@{
    // Set the title for the page
    ViewData["Title"] = "Welcome to EventEase";
}

<div class="container text-center">
    <!-- Main Heading which is pink -->
    <h1 class="display-4"">Welcome to EventEase</h1>

    <!-- A short description of the project -->
    <p class="lead">Easily manage events, venues, and bookings in one place.</p>

    <!-- Buttons for navigation because i want the use to be able to navigate easily-->
