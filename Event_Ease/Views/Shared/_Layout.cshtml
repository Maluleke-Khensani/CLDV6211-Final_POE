<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Event_Ease</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
   <link rel="stylesheet" href="~/Event_Ease.styles.css" asp-append-version="true" />
    
   <!--The style code was adapted from Chatgpt (openAi) -->
   <style>
        body {
            background-color: #f7f3f0;
            color: #333;
        }

        .navbar {
            background-color: #d8a7b1;
        }

        .navbar-brand, .nav-link {
            color: #fff !important;
        }


        /* Updated button styles */
        .btn,
        .btn-primary,
        .btn-danger,
        .btn-warning,
        .btn-success,
        .btn-info,
        .btn-secondary {
            background-color: #C4DADE !important;
            border-color: #C4DADE !important;
            color: #333 !important;
        }

            .btn:hover,
            .btn-primary:hover,
            .btn-danger:hover,
            .btn-warning:hover,
            .btn-success:hover,
            .btn-info:hover,
            .btn-secondary:hover {
                background-color: #b0c9cd !important;
                border-color: #b0c9cd !important;
                color: #333 !important;
            }

        /* Create New button */
        .btn-create {
            background-color: #C4DADE !important;
            border-color: #C4DADE !important;
            color: #333 !important;
            padding: 8px 16px;
            font-weight: 500;
            border-radius: 6px;
            text-decoration: none;
        }

            .btn-create:hover {
                background-color: #b0c9cd !important;
                border-color: #b0c9cd !important;
                color: #222 !important;
            }


        /* Table header row style */
        table thead tr {
            background-color: #E8DAF0;
        }
    </style>


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light border-bottom shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Event_Ease</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                       <!-- <li class="nav-item"><a class="nav-link" asp-controller="About" asp-action="About">About</a></li> -->
                        <li class="nav-item"><a class="nav-link" asp-controller="Venue" asp-action="Index">Venues</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Event" asp-action="Index">Events</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Booking" asp-action="Index">Bookings</a></li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>



